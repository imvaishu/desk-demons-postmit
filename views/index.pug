doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/styles/styles.css' type='text/css')
  script(src="/js/index.js")
  title Postmit
.root
  .menu
    div
      .app-name POSTMIT
      .pages
        a.page.active-page(href='#') Home
        a.page(href='/profile') Profile
        button.primary-btn(onclick='showNewPostElement()') Post a Message
  .main-panel
    .header
      span Home
    .feed
      include components/newPost.pug
      .posts
        include components/post.pug
        each item in posts 
          +post(item)
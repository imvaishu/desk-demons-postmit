mixin post(post)
  .post
    .flex
      .profile-pic
        span= post.initials
      .user-details
        .name
          span= post.name 
          span(class="timestamp")= ` ãƒ» ${post.posted_at}`
        .username
          span= `@${post.username}`
    .post-content= post.message
    .actions.flex
      .action
        - let className="far fa-heart icon likeBtn";
        if post.isLiked
         - className="fas fa-heart icon likeBtn"
        i(class=className onclick=`toggleLikeUnlike(${post.id})`)